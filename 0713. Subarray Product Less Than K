class Solution {
public:
    int numSubarrayProductLessThanK(vector<int>& nums, int k) {
        if(k == 0) return 0;
        int n = nums.size();
        int product = 1;
        int count = 0;
        for(int l=0,r=0;r<n;r++) {
            product *= nums[r];
            while(l<r and product >= k) {
                product /= nums[l++];
            }
            if(product < k) {
                count += max(0,r-l+1);
            }
        }
        return count;
    }
};
